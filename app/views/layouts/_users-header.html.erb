<!-- ヘッダー -->
<header>
  <nav class = "navbar">
    <ul class = "nav navbar-nav navbar-left">
     <li><%= link_to "MOMENTS" %></li>
     <li><%= link_to "Locations", users_countries_path %></li>
    </ul>
    <!-- 検索フォーム -->
    <nav class = "nav navbar-nav">
      <div class = "search-engine">
        <%= search_form_for @search, url: admins_cities_path do |f| %>
          <%= f.search_field :city_name_cont, class: 'form-control', placeholder: "都市を検索", id: "city-search" %>
          <%= f.submit "search", class: "btn btn-default" %>
        <% end %>
      </div>
    </nav>
    <!-- ヘッダー右 -->
     <% if user_signed_in? %>
         <ul class = "nav navbar-nav navbar-right">
           <li><%= link_to do %><i class="far fa-heart"></i> お気に入り<% end %></li>
           <li><%= link_to users_user_path(current_user) do %>
                 <%#= attachment_image_tag @user, :profile_img, :fill, 1, 1, format: 'jpeg', fallback: "noimage.jpg", size: 10x10 %>
                 <p>Hi <%= current_user.first_name %></p>
               <% end %>
           </li>
           <li><%= link_to destroy_user_session_path, method: :delete do %>
                  <p><i class="fas fa-sign-out-alt"></i> ログアウト </p>
                <% end %>
            </li>
         </ul>
     <% else %>
         <ul class = "nav navbar-nav navbar-right">
      	  <li><%= link_to "フォトグラファーをはじめる", new_user_registration_path %></li>
            <li><%= link_to " LOG IN", new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
            <li><%= link_to " SIGN UP", new_user_registration_path %></li>
         </ul>
     <% end %>
  </nav>
</header>
<!-- ヘッダーここまで -->