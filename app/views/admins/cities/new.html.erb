<!-- ヘッダー部分テンプレート -->
<%= render 'layouts/admins-header' %>
<br>
<br>
<br>
<div class = "container">
  <div class = "row">
    <%= link_to '都市の一覧', admins_cities_path, class: "review-button btn btn-success" %>
    <h2>都市を追加</h2>
  	  <%= form_for @city, url: admins_cities_path do |c| %>
       <%= c.label :country_id %>
       <%= c.collection_select :country_id, Country.all, :id, :country_name,
                               :prompt => "国を選択" %>
       <div class = "input">
       	 <%= c.label "都市名" %>
       	 <%= c.text_field :city_name %>
       </div>
       <div>
       	 <%= c.label "都市の写真" %>
	     <%= c.attachment_field :city_img %>
	     </div>
	     <div class = "input">
         <p><strong>都市の説明</strong></p>
       	 <%= c.text_area :about_city, class: "about-city-form" %>
       </div>
  </div>
  <div class = "row">
    <%= c.submit '追加', class: "btn btn-warning city-add" %>
    <% end %>
  </div>
  </div>
</div>