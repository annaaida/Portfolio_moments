<!-- ヘッダー部分テンプレート -->
<%= render 'layouts/admins-header' %>
<br>
<br>
<br>
<div class = "container">
  <div class = "row">
   <%= form_for @city, url: admins_city_path(@city) do |c| %>
    <div class = "row col-xs-offset-2">
     <div class = "input">
   	  <%= c.label "都市名" %>
   	  <%= c.text_field :city_name %>
     </div>
     <div class = "input">
	  <%= c.label "都市の写真" %>
	  <%= c.attachment_field :city_img %>
	 </div>
	 <div class = "input">
   	  <%= c.label "都市の説明" %>
   	  <%= c.text_area :about_city %>
     </div>

	  <%= c.submit "編集完了", class: "btn btn-warning" %>
   <% end %>
  </div>
</div>
