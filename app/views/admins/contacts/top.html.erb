<!-- アドミン マイページ トップ -->
<div class = "container-fluid">
  <div class = "row">
    <div class = "clearfix"></div>
      <!-- サイドバー -->
      <div class = "col-xs-3 js-fullheight" id = "admin-mypage">
        <h3 class = "admin-title"> 管理者ページ</h3>
        <ul class="nav nav-sidebar">
          <li><%= link_to admins_contacts_path do %>
               <p><i class="fas fa-inbox"></i> 問い合わせ一覧</p>
              <% end %>
          </li>
          <li><%= link_to admins_countries_path do %>
               <p><i class="fas fa-globe-americas"></i> 国一覧と管理</p>
              <% end %>
          </li>
          <li><%= link_to new_admins_city_path do %>
               <p><i class="fas fa-passport"></i> 都市の追加・編集</p>
              <% end %>
          </li>
          <li><%= link_to admins_users_path do %>
               <p><i class="fas fa-user-cog"></i> ユーザーの編集・削除</p>
              <% end %>
          </li>
          <li><%= link_to admins_photographers_path do %>
                <p><i class="fas fa-camera-retro"></i> フォトグラファーの編集・削除</p>
              <% end %>
          </li>
          <li><%= link_to  do %>
                <p><i class="far fa-edit"></i> レビュー一覧 </p>
            <% end %>
          </li>
          <li><%= link_to admins_books_path do %>
                <p><i class="far fa-calendar-alt"></i> 予約一覧 </p>
            <% end %>
          </li>
        </ul>
      </div>
      <div class = "col-xs-9">
        <!-- ヘッダー -->
        <header class = "navbar navbar-light bg-light fixed-top">
         <nav>
          <ul class = "nav navbar-nav navbar-right">
            <li><%= link_to admins_root_path do %>
                  <p><i class="fas fa-home"></i> Home</p>
                <% end %>
            </li>
            <li><%= link_to do %>
                  <p><i class="fas fa-question-circle"></i> このページの使い方</p>
                <% end %>
            </li>
            <li><%= link_to users_users_path do %>
                  <p><i class="fas fa-user-circle"></i> サイトトップへ </p>
                <% end %>
            </li>
            <li><%= link_to edit_admin_registration_path(current_admin) do %>
                  <p><i class="fas fa-user-cog"></i> 設定 </p>
                <% end %>
            </li>
            <li><%= link_to destroy_admin_session_path, method: :delete do %>
                  <p><i class="fas fa-sign-out-alt"></i> ログアウト </p>
                <% end %>
            </li>
          </ul>
         </nav>
        </header>
        <!-- 新着メッセージ一覧 -->
        <div class = "updates">
          <div class = "row">
            <div class = "box-title"><p class = "history">新着予約情報</p></div>
              <div class = "main-boxes">
                <table class = "table table-hover">
                  <thead>
                     <tr>
                      <th>image</th>
                      <th>予約者</th>
                      <th>日付</th>
                      <th>時間</th>
                      <th>待ち合わせ場所</th>
                      <th>メッセージ</th>
                      <th>予約状況</th>
                     </tr>
                  </thead>
                  <tbody>
                  <%# @bookings.each do |booking| %>
                    <tr>
                      <td><%#= attachment_image_tag , :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "noimage.jpg" %></td>
                      <td><%#= booking.user.last_name %><%#= booking.user.first_name %></td>
                      <td><%#= booking.date %></td>
                      <td><%#= booking.time %></td>
                      <td><%#= booking.meeting_spot %></td>
                      <td><%#= booking.message %></td>
                      <td><%#= booking.status %></td>
                    </tr>
                  <%# end %>
                  </tbody>
                </table>
                <%#= paginate @bookings %>
              </div>
          </div>
        <!-- 新着問い合わせ一覧 -->
          <div class = "row">
            <div class = "box-title"><p class = "history">最新のお問い合わせ</p></div>
              <div class = "main-boxes">
                  <table class = "table">
                    <thead>
                       <tr>
                        <th>image</th>
                        <th>受信時刻</th>
                        <th>ユーザー名</th>
                        <th>タイトル</th>
                        <th>内容</th>
                       </tr>
                    </thead>
                    <tbody>
                    <%# .each do |order| %>
                      <tr>
                        <td><%#= link_to order.id, order_path(order.id) %></td>
                        <td><%#= order.shipping_status %></td>
                        <td><%#= order.created_at.to_date %></td>
                      </tr>
                    <%# end %>
                    </tbody>
                  </table>
                  <%#= paginate @#orders %>
              </div>
          </div>
          <!-- 新着問い合わせ一覧 -->
          <div class = "row">
            <div class = "box-title"><p class = "history">新着ユーザー一覧</p></div>
              <div class = "main-boxes">
                  <table class = "table">
                    <thead>
                       <tr>
                        <th>image</th>
                        <th>受信時刻</th>
                        <th>ユーザー名</th>
                        <th>タイトル</th>
                        <th>内容</th>
                       </tr>
                    </thead>
                    <tbody>
                    <%# .each do |order| %>
                      <tr>
                        <td><%#= link_to order.id, order_path(order.id) %></td>
                        <td><%#= order.shipping_status %></td>
                        <td><%#= order.created_at.to_date %></td>
                      </tr>
                    <%# end %>
                    </tbody>
                  </table>
                  <%#= paginate @#orders %>
              </div>
          </div>
        </div>
      </div>
  </div>
</div>
