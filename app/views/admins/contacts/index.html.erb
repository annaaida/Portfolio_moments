<!-- ヘッダー部分テンプレート -->
<%= render 'layouts/admins-header' %>
<br>
<br>
<br>
<div class = "container">
  <div class = "row">
    <h1>お問い合わせ一覧</h1>
	<table class = "table">
	 <thead>
	   <tr>
		<th>お名前</th>
		<th>件名</th>
		<th>お問い合わせ内容</th>
		<th></th>
		<th></th>
	   </tr>
	   </thead>
		<% @contacts.each do |contact| %>
		<tbody>
		<tr>
			<td> <%= contact.user.last_name %> 様</td>
			<td> <%= contact.contact_title %></td>
			<td> <%= contact.contact_contents %></td>
			<td> <%= link_to "詳細", admins_contact_path(contact), class: "btn btn-primary" %></td>
			<td> <%= link_to "削除", admins_contact_path(contact), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
		</tr>
	    </tbody>
	  <% end %>
	</table>
  </div>
</div>
