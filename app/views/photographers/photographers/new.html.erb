
<!-- ユーザー登録後、フォトグラファー権限カラムtrueの場合に、フォトグラファー情報登録画面として本画面に遷移 -->

<section class = "mypage clearfix">
    <h4 class = "user-edit">フォトグラファー情報の登録</h4>
    <p> 後から編集できます </p>
</section>
<div class = "container">
  <div class = "row">
   <%= form_for @photographer, url: new_photographers_photographer_path do |f| %>
     <div class = "input">
      <%= f.label :プロフィール画像 %>
      <%= f.attachment_field :profile_img %>
     </div>
     <div class = "input">
      <%= f.label :一時間あたりの値段 %>
      <%= f.text_field :price, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :対応可能エリア %>
      <%= f.text_field :area, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :母国語 %>
      <%= f.text_field :mother_tongue, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :話せる言語1 %>
      <%= f.text_field :language_1, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :話せる言語2 %>
      <%= f.text_field :language_2, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :自己紹介 %>
      <%= f.text_field :introduction, autofocus: true %>
     </div>
     <!-- cocoon images 追加 -->
     <h3> 画像追加 </h3>
	   <div id = "images">
	    <%= f.fields_for :images do |f| %>
	      <div class = "fields">
	       <%= f.attachment_field :image_1 %>
	      </div>
	      <div class = "fields">
	       <%= f.attachment_field :image_2 %>
	      </div>
	      <div class = "fields">
	       <%= f.attachment_field :image_3 %>
	      </div>
	      <div class = "fields">
	       <%= f.attachment_field :image_4 %>
	      </div>
	      <div class = "fields">
	       <%= f.attachment_field :image_5 %>
	      </div>
	      <div class = "fields">
	       <%= f.attachment_field :image_6 %>
	      </div>
	    <% end %>
	   </div>
	    <div class="actions">
         <%= f.submit '完了', class: "btn btn-primary col-xs-12" %>
        </div>
    <% end %>
  </div>
</div>