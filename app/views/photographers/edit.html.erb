<!-- フォトグラファー "ポートフォリオを編集" ページ -->
<!-- ヘッダー部分テンプレート -->
<%= render 'layouts/photographers-header' %>

<div class = "container">
  <div class = "row">
    <section class = "mypage clearfix">
      <h4 class = "photographer-edit">ポートフォリオ編集</h4>
    </section>
   <%= form_for @photographer, url: photographers_path(@photographer) do |f| %>
     <div class = "input">
      <%= f.label :プロフィール画像 %>
      <%= f.attachment_field :profile_img %>
     </div>
     <div class = "input">
      <%= f.label :一時間あたりの値段 %>
      <%= f.text_field :price, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :対応可能エリア %>
      <%= f.text_field :area, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :母国語 %>
      <%= f.text_field :mother_tongue, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :話せる言語1 %>
      <%= f.text_field :language_1, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :話せる言語2 %>
      <%= f.text_field :language_2, autofocus: true %>
     </div>
     <div class = "input">
      <%= f.label :自己紹介 %>
      <%= f.text_field :introduction, autofocus: true %>
     </div>

     <!-- images 追加 -->
     <h3 class = "photographer-edit"> 画像追加 </h3>
     <div id = "images">
      <%= form_for @images, url: edit_photographer_path do |i| %>
        <div class = "field">
          <%= f.label :画像1 %>
         <%= i.attachment_field :image_1 %></p>
        </div>
        <div class = "field">
          <%= f.label :画像2 %>
         <%= i.attachment_field :image_2 %>
        </div>
        <div class = "field">
          <%= f.label :画像3 %>
         <%= i.attachment_field :image_3 %>
        </div>
        <div class = "field">
          <%= f.label :画像4 %>
         <%= i.attachment_field :image_4 %>
        </div>
        <div class = "field">
          <%= f.label :画像5 %>
         <%= i.attachment_field :image_5 %>
        </div>
        <div class = "field">
          <%= f.label :画像6 %>
         <%= i.attachment_field :image_6 %>
        </div>
      <% end %>
     </div>
     <div class="actions">
     <%= f.submit '編集完了', class: "btn btn-primary col-xs-2" %>
   <% end %>
  </div>
</div>

