<% if user_signed_in? %>
	<% if photographer.favorited_by?(current_user) %>

		<%= link_to photographer_favorites_path(photographer.id), url: photographer_favorites_path(photographer.id), method: :delete, remote: true do %>
			<i class = "fa fa-heart" aria-hidden = "true" style = "color: red;font-size:30px"></i>
		<% end %>
		<%= photographer.favorites.count %>

	<% else %>

		<%= link_to photographer_favorites_path(photographer.id), url: photographer_favorites_path(photographer.id), method: :post do %>
			<i class = "far fa-heart" aria-hidden = "true" style = "color: red;font-size:30px"></i>
		<% end %>
		<%= photographer.favorites.count %>

	<% end %>
<% end %>