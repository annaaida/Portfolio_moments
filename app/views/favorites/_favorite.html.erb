<% if user_signed_in? %>
	<% if photographer.favorited_by?(current_user) %>
		<%= link_to photographer_favorites_path(photographer.id), url: photographer_favorites_path(photographer.id), method: :delete, remote: true do %>
			<span class = "favorites-list"><p><i class = "fa fa-heart" aria-hidden = "true" style = "color: rgb(255, 90, 95); font-size:20px"></i> お気に入りを解除</p></span><br>
		<% end %>
		<p class = "favorites-count"><%= photographer.favorites.count %>人がお気に入りに登録</p>
	<% else %>
		<%= link_to photographer_favorites_path(photographer.id), url: photographer_favorites_path(photographer.id), method: :post, remote: true do %>
			<span class = "favorites-list"><p><i class = "far fa-heart" aria-hidden = "true" style = "color: rgb(255, 90, 95); font-size:20px"></i> お気に入りに保存</p></span><br>
		<% end %>
		<p class = "favorites-count"><%= photographer.favorites.count %>人がお気に入りに登録</p>
	<% end %>
<% end %>