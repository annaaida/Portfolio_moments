<!-- メイン画像と検索フォーム -->
<div class = "container">
  <div class = "row">
    <div clas  = "top-image">
      <div class = "search-engine">
        <%= search_form_for @search, url: admins_cities_path do |f| %>
          <%= f.search_field :city_name_cont, class: 'form-control', placeholder: "都市を検索" %>
          <%= f.submit "search", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
    <main class = "clearfix">
  <div class = "country-wrapper">
    <% @cities.each do |city| %>
      <div class = "city-index">
        <%#= attachment_image_tag city, :city_img, :fill, 200, 200, format: 'jpeg', fallback: "no_img.jpg", size: "200x200" %><br>
        <span class = "city_name"> <%= link_to city.city_name, users_city_path(city) %></span><br>
      </div>
    <% end %>
  </div>
