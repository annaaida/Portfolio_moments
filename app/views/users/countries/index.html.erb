<!-- Location ページ -->
<!-- ヘッダー -->
<%= render 'layouts/users-header' %>
<!-- 国一覧 -->
<div class = "container-fluid" id = "coutries-container">
  <div class = "row">
    <main class = "clearfix">
      <div class = "main-image">
        <h1>LOCATION</h1>
      </div>
      <!-- 検索フォーム -->
      <div id = "search-engine-countries-index" >
        <%= search_form_for @search, url: admins_cities_path do |f| %>
          <%= f.search_field :city_name_cont, class: 'form-control', placeholder: "都市を検索", id: "city-search" %>
          <%= f.submit "search", class: "btn btn-default" %>
        <% end %>
      </div>
      <div class = "country-wrapper">
	     <% @countries.each do |country| %>
  		　　<div class = "country-items">
            <div class = "country-items">
  			　　　<%#= attachment_image_tag country, :country_img, :fill, 200, 200, format: 'jpeg', fallback: "no_img.jpg", size: "400x300" %><br>
  			　　　<span class = "country_name"> <%= link_to country.country_name, users_country_path(country) %></span><br>
  		　　  </div>
         </div>
	      <% end %>
      </div>
    </main>
  </div>
</div>
