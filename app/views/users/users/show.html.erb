<!-- ユーザー マイページ トップページ -->
<div class = "container-fluid" id = "user-mypage-back">
  <div class = "row">
    <!-- header -->
    <div class = "header-line">
     <p class = "header-message">my page</p>
    </div>
  </div>
  <div class = "row">
    <div class = "clearfix"></div>
      <div class = "col-xs-3 js-fullheight text-center" id = "mypage-sidebar">
        <table class =  "table">
          <tbody>
            <tr>
              <td><%#= attachment_image_tag @photographer, :profile_img, :fill, 1, 1, format: 'jpeg', fallback: "noimage.jpg", size: '120x120', class: 'profile_image' %></td>
            </tr>
            <tr>
              <td><p id = "fullname"><%= current_user.last_name %> <%= current_user.first_name %></p></td>
            </tr>
            <tr>
              <td><p><%= current_user.email %></p></td>
            </tr>
          </tbody>
        </table>
        <div class = "row">
          <div class = "side-bar">
            <ul class="nav nav-sidebar">
              <li><%= link_to do %>
                   <p><i class="far fa-calendar-alt"></i> 予約一覧</p>
                  <% end %>
              </li>
              <li><%= link_to do %>
                   <p><i class="fas fa-inbox"></i>inbox</p>
                  <% end %>
              </li>
              <li><%= link_to do %><i class="far fa-heart"></i>お気に入り一覧<% end %></li>
              <li><%= link_to edit_user_registration_path(current_user) do %>
                    <p><i class="fas fa-user-cog"></i> 基本情報の編集 </p>
                  <% end %>
              </li>
             </ul>
          </div>
        </div>
      </div>
    <div class = "col-xs-9">
      <header class = "navbar navbar-light bg-light fixed-top">
       <nav>
        <ul class = "nav navbar-nav navbar-right">
          <li><%= link_to photographer_top_path(current_user) do %>
                <p><i class="fas fa-home"></i> Home</p>
              <% end %>
          </li>
          <li><%= link_to about_path do %>
                <p><i class="fas fa-question-circle"></i> このページの使い方</p>
              <% end %>
          </li>
          <li><%= link_to users_country_path do %>
                <p><i class="fas fa-map-marked-alt"></i> 場所検索へ</p>
              <% end %>
          </li>
          <li><%= link_to destroy_user_session_path, method: :delete do %>
                <i class = "fas fa-sign-out-alt"></i> ログアウト </p>
              <% end %>
          </li>
        </ul>
       </nav>
    </header>
      <!-- 新着メッセージ一覧 -->
    <div class = "updates">
      <div class = "row">
        <div class = "main-upper">
          <h3></h3>
        </div>
      </div>
      <div class = "row">
        <div class = "main-lower">
          <h3></h3>
