<div class = "container main-section" id = "log-in">
  <div class = "row">
   <div class="col-md-12 text-center user-login-header">
    <h2 class = "login-title">Login</h2>
   </div>
  </div>
  <div class="row">
    <div class="col-md-4 col-sm-8 col-xs-12 col-md-offset-4 col-sm-offset-2 login-image-main text-center">
      <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12 user-image-section">
            <%= image_tag('/assets/user.jpg') %>
          </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="col-md-12 col-sm-12 col-xs-12 user-login-box">
            <div class="form-group">
                <span class="input-group-text"><i class="fas fa-envelope"></i>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => " e-mail" %></span>
                <span class="input-group-text"><i class="fas fa-key"></i>
                <%= f.password_field :password, autocomplete: "current-password", :placeholder => " password" %></span>
            </div>
            <div class = "click">
             <%= f.submit "ログイン", class: "login-button" %>
            </div>
          </div>
          <div class="col-md-12 col-sm-12 col-xs-12 last-part">
            <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end %>
          <% end %>
          <%= render "devise/shared/links" %>
          </div>
        </div>
    </div>
  </div>
</div>
<%= render 'layouts/users-footer' %>



