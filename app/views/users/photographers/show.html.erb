<div class = "container-fluid">
  <div class = "row">
    <div id = "sidebar" class = "js-fullheight text-center">
      <%= image_tag 'noimage.jpg' %>
      <%#= attachment_image_tag @photographer, :profile_img, :fill, 1, 1, format: 'jpeg', fallback: "noimage.jpg", size: '120x120', class: 'profile_image' %>
        <ul>
          <li><p><%= @photographer.user.last_name %> <%= @photographer.user.first_name %></p></li>
          <li>Contact</li>
          <li><a href = "#" class = "sns-btn"><i class = "fab fa-twitter-square"></i></a></li>
          <li><a href = "#" class = "sns-btn"><i class = "fab fa-instagram"></i></a></li>
          <li><a href ="#" class = "sns-btn"><i class = "fab fa-facebook-square"></i></a></li>
        </ul>
      <!-- いいねボタン -->
          <li><span id = "favorite_buttons_<%= @photographer.id %>"></span>
            <%= render :partial => 'users/favorites/favorite', :locals => { photographer: @photographer} %>
          </li>
          </span>
        <div class="form-btn">
          <%= link_to 'Book Now', new_photographer_book_path(@photographer), class = "reserve-btn" %>
        </div>
      </nav>
    </div>
    <div class = "col-xs-offset-4">
      <div class = "navbar">
        <% if user_signed_in? %>
         <nav>
           <ul class = "nav navbar-nav navbar-right">
             <li><%= link_to do %>
                   <i class="far fa-heart"></i> Favorites
                 <% end %>
             </li>
             <li><%#= link_to [user_path(current_user)] do %>
                   <%#= attachment_image_tag @user, :profile_img, :fill, 1, 1, format: 'jpeg', fallback: "noimage.jpg", size: 10x10 %>
                 <%# end %>
             </li>
             <li><%= link_to " Log Out", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out text-muted" %></li>
           </ul>
         </nav>
       <% else %>
         <nav>
           <ul class = "nav navbar-nav navbar-right">
            <li><%= link_to "フォトグラファーをはじめる", new_user_registration_path %></li>
              <li><%= link_to " LOG IN", new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
              <li><%= link_to " SIGN UP", new_user_registration_path %></li>
           </ul>
         </nav>
       <% end %>
      </div>
      <div class = "col-xs-10">
        <div class = "introduction">
          <p class = "hi-message"> Hello. I am <%= @photographer.user.first_name %></p>
          <p>Joained in <%= @photographer.created_at.strftime("%Y") %></p>
          <i class = "fas fa-quote-left" id = "quote-icon"></i>
          <p class = "who-i-am clearfix"><%= @photographer.introduction %></p>
        </div>
        <div class = "area">
          <p><span class="fas fa-map-marked-alt" id = "map-pin-icon"></span> Lives in <%= @photographer.area %></p>
        </div>
        <div class = "language">
          <p><span class="fas fa-comments" id = "language-icon"></span>Speaks native <%= @photographer.mother_tongue %> / conversational <%= @photographer.language_1 %> <%= @photographer.language_2 %></p>
        </div>

        <div class = "row" id = "image-zone">
          <div class = "col-xs-6">
            <%= image_tag 'noimage.jpg', class: "portfolio-image-main" %>
          </div>
          <div class = "col-xs-4">
            <div class = "row">
              <%= image_tag 'noimage.jpg', class: "portfolio-image-2" %>
            </div>
            <div class = "row">
              <%= image_tag 'noimage.jpg', class: "portfolio-image-3" %>
            </div>
          </div>
        </div>
        <div class = "row">
          <div class = "col-xs-3">
            <%= image_tag 'noimage.jpg', class: "portfolio-image-4" %>
          </div>
          <div class = "col-xs-3">
            <%= image_tag 'noimage.jpg', class: "portfolio-image-5" %>
          </div>
          <div class = "col-xs-3">
            <%= image_tag 'noimage.jpg', class: "portfolio-image-6" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class = "container">
  <div class = "row">
    <div class = "review col-xs-offset-10">
      <% if user_signed_in? %>
        <% unless @photographer.reviewed_by?(current_user) %>
          <%= link_to "レビューを投稿する", new_photographer_review_path(@photographer), class: "review-button btn btn-success" %>
        <% else %>
          <% review = Review.find_by(user_id: current_user.id, photographer_id: @photographer.id) %>
          <%= link_to "レビューを編集する", edit_photographer_review_path(@photographer, @review), class: "review-button btn btn-success" %>
          <%= link_to "レビューを削除する", photographer_review_path(@photographer, @review), method: :delete, data:{confirm:"本当に削除しますか?"}, class: "review-button btn btn-warning" %>
        <% end %>
      <% else %>
         <p>レビューを書くにはログインしてください。</p>
      <% end %>
    </div>
    <div class = "review-index">
     <table class = "table review_table">
       <tr style = "background-color: #DDDDDD;">
         <th style = "width:100px;"> 投稿者</th>
         <th style = "width:200px;"> タイトル</th>
         <th style = "width:600px;"> 本文</th>
       </tr>
     <% @reviews.each do |r| %>
       <tr>
         <td><%= r.name %></td>
         <td><%= r.title %></td>
         <td class = "review_body"><%= r.body %></td>
       </tr>
     <% end %>
     <%= paginate @reviews, class: "paginate" %>
     </table>
    </div>

    </div>
  </div>
</div>
</div>
</div>