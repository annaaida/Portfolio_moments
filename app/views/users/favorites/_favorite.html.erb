<% if user_signed_in? %>
	<% if photographer.favorited_by?(current_user) %>
		<%= link_to users_favorite_path(photographer.id), url: users_favorite_path, method: :delete, remote: true do %>
			<i class = "fa fa-heart" aria-hidden = "true" style = "color: red;font-size:30px"></i>
		<% end %>
		<%= photographer.favorites.count %>
	<% else %>
		<%= link_to users_favorites_path(photographer.id), url: users_favorites_path, method: :post, remote: true do %>
			<i class = "far fa-heart" aria-hidden = "true" style = "color: red;font-size:30px"></i>
		<% end %>
		<%= photographer.favorites.count %>
	<% end %>
<% end %>