<div class="container main-section">
  <div class = "row">
   <div class="col-md-12 text-center user-login-header">
    <h2 class = "login-title">New Account</h2>
   </div>
  </div>
 <div class="row">
    <div class="col-md-4 col-sm-8 col-xs-12 col-md-offset-4 col-sm-offset-2 login-image-main">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 user-image-section">
          <div class = "text-center">
           <%= image_tag('/assets/user.jpg') %>
          </div>
    　　　 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class= "photographer-check">
              <%= f.label :フォトグラファーとしてのアカウント作成  %>
              <%= f.check_box :photographer ,{}, "true", "false" %>
            </div>
            <div class = "new-account-info1">
              <%= f.label :姓名%>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
            <div class = "new-account-info2">
               <%= f.label :よみがな %>
               <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
              <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
            </div>
            <div class = "new-account-info3">
              <%= f.label :メール %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "new-account-email" %>
            </div>
            <div class="new-account-info7">
              <%= f.label :パスワード %>
                <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: " 6文字以上" %>
            </div>
            <div class="new-account-info8">
              <%= f.label :確認 %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class = "click">
             <%= f.submit "会員登録", class: "login-button new-account-button" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/users-footer' %>


